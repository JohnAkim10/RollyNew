<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rollynew"
    android:backgroundTint="@color/cardview_dark_background"
    android:backgroundTintMode="multiply"
    tools:context=".Inscription">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/fond">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_fireplace_24"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ROLLY NEWS"
                    android:fontFamily="serif"
                    android:layout_marginTop="30dp"
                    android:textSize="30dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="Login"
                    android:layout_margin="30dp"
                    android:textSize="20dp"
                    android:fontFamily="serif"
                    android:textColor="@color/white"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edittext"
                    android:elevation="5dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Nom"
                    android:layout_marginBottom="30dp"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_baseline_person_24"/>
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edittext"
                    android:elevation="5dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Email ou Numero"
                    android:layout_marginBottom="30dp"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_baseline_email_24b"/>
                <EditText
                    android:id="@+id/mdp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edittext"
                    android:elevation="5dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:layout_marginBottom="30dp"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"/>
                <EditText
                    android:id="@+id/cmdp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edittext"
                    android:elevation="5dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:hint="Confirmer mot de passe"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"/>
                <Button
                    android:id="@+id/inscrire"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fondbutton"
                    android:layout_gravity="center"
                    android:text="Se connecter"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>